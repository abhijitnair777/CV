<div class="contentcontainer med left" style="margin-left: 10px;">
<%= form_for @education, url:{action: "update"} do |f| %>      
 <%= "<div>#{@education.errors.full_messages.first}</div>".html_safe if @education.errors.any? %>

  <p>
    <%=f.label :Qualification %><br>
    <%=f.select(:qualification_id, options_for_type) %>
  </p>

<div class="field">
  <div class="small-6 columns">
    <%= f.label :Institute_Name %></br>
    <%= f.text_field :institute_name %>
  </div>

  <div class="small-6 columns">
   </br><%= f.label :Percentage%></br>
    <%= f.number_field :percentage%>
  </div>

  <div class="small-6 columns">
    </br><%= f.label :Year_Of_Passing%></br>
    <%= select_date(Date.current, start_year: 2016, end_year: Date.current.year)%>
  </div>
   <%= f.hidden_field :user_id, :value => current_user.id%>
</div>
</br><%= f.submit "Submit", class: 'button small radius' %>
</div>
<% end %>